generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  password String?

  session Session[]
  curriculum Curriculum[]
}

model Session {
  id String @id @default(cuid())

  userId String
  user User @relation(fields: [userId], references: [id])
}

model Curriculum {
  id String @id @default(cuid())
  subjectName String
  topic String
  exercise String

  userId String
  user User @relation(fields: [userId], references: [id])
}
